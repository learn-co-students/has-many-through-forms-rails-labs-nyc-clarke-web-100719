<h1>New Post</h1>

<%= form_for @post do |f| %>
    Title: <%= f.text_field :title %><br><br>
    Content: <%= f.text_area :content %><br>
    Categories:<%= f.collection_check_boxes :category_ids, @categories, :id, :name %><br>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
        New Category:<%= categories_fields.text_field :name %>
        <% end %>
    <%= f.submit %>
<% end %>