<%= form_for post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.label :categories %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    <%= f.fields_for :categories, post.categories.build do |categories_field| %><br>
        <%= categories_field.label "Category" %><br>
        <%= categories_field.text_field :name %>
    <% end %><br>
    <%= f.submit %>
<% end %>